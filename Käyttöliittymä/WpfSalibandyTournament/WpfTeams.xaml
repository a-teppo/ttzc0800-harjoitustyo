<Window x:Class="WpfSalibandyTournament.WpfTeams"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSalibandyTournament"
        mc:Ignorable="d"
        Title="Joukkueet" Height="450" Width="800">
    <Grid Background="LightBlue">
        <StackPanel>
            <StackPanel>
                <Button x:Name="btnGetTeam"/>
            </StackPanel>
            <DataGrid x:Name="dgPlayers">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="HenkiloId" Binding="{Binding Path=HenkiloId}"/>
                    <DataGridTextColumn Header="Sukunimi" Binding="{Binding Path=Sukunimi}"/>
                    <DataGridTextColumn Header="Etunimi" Binding="{Binding Path=Etunimi}"/>
                    <DataGridTextColumn Header="Syntymävuosi" Binding="{Binding Path=Syntymävuosi}"/>
                    <DataGridTextColumn Header="Nimi" Binding="{Binding Path=Nimi}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
