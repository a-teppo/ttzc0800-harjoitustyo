<Window x:Class="WpfSalibandyTournament.WpfTeameditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSalibandyTournament"
        mc:Ignorable="d"
    Title="Joukkue: Lisää/muokkaa" Height="350" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Background="LightBlue" Width="100">
            <TextBlock Text="Joukkueenimi:" Height="15" Margin="5 15 5 5"/>
            <TextBlock Text="Paikkakunta" Height="15" Margin="5"/>
            <TextBlock Text="Seura:" Height="15" Margin="5"/>
            <TextBlock Text="Logo tiedosto" Height="15" Margin="5"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Background="LightBlue" Width="200" Grid.ColumnSpan="2" >
            <TextBox x:Name="txtTeamname" Height="15" Margin="5 15 5 5"/>
            <TextBox x:Name="txtLocation" Height="15" Margin="5"/>
            <TextBox x:Name="txtOrganization" Height="15" Margin="5"/>
            <TextBox x:Name="txtLogofile" Height="15" Margin="5"/>
            <Button x:Name="btnLogofile" Content="Selaa" Height="20" Width="70" HorizontalAlignment="Right" Margin="0 0 5 0"/>
            <Button x:Name="btnSave" Content="Tallenna" Height="20" Width="100" Margin="0 50 0 5"/>
            <Button x:Name="btnCancel" Content="Peruuta" Height="20" Width="100" Margin="0 5 0 5"/>
        </StackPanel>
    </Grid>
</Window>