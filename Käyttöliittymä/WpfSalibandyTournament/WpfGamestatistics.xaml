<Window x:Class="WpfSalibandyTournament.WpfGamestatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSalibandyTournament"
        mc:Ignorable="d"
        Title="Ottelupöytäkirja" Height="450" Width="800">
    <Grid>
        <StackPanel Background="LightBlue" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" MinHeight="200">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="OtteluNro - " HorizontalAlignment="Left" Margin="10 5 0 0" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="12" Margin="0 5 80 0" FontWeight="Bold" FontSize="14"/>
                        <Button Content="Käynnistä" Width="65" Margin="0 5" Click="StartTimer"/>
                        <Button Content="Pysäytä" Width="65" Margin="5 5" Click="StopTimer"/>
                        <Label x:Name="lblTimer" Width="65" Margin="0 5"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Koti" HorizontalAlignment="Left" Margin="10 5 0 0" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="Joukkue1" Margin="45 5 0 0"  FontSize="16"/>
                    </StackPanel>
                        <DataGrid AutoGenerateColumns="False" Name="dgHomeGoals" CanUserAddRows="True" ItemsSource="{Binding}" Margin="10">
                        <DataGrid.Columns>
                        <DataGridTextColumn Header="Maali" IsReadOnly="True" Binding="{Binding Path=Maalinro}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Aika" IsReadOnly="True"  Binding="{Binding Path=Aika}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Tekijä" IsReadOnly="True"  Binding="{Binding Path=Maalintekija}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Syöttäjä" IsReadOnly="True"  Binding="{Binding Path=Syottaja}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Erikoistilanne" IsReadOnly="True"  Binding="{Binding Path=Erikoistilanne}" Width="80"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                    <Button Content="Lisää" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="70" Margin="10 0" Click="AddHomeGoal" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" MinHeight="200">
                <StackPanel>
                    <DataGrid AutoGenerateColumns="False" Name="dgHomePenalties" CanUserAddRows="True" ItemsSource="{Binding}" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Rangaistus" IsReadOnly="True" Binding="{Binding Path=Rangaistusnro}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Aika" IsReadOnly="True"  Binding="{Binding Path=Aika}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Kärsijä" IsReadOnly="True"  Binding="{Binding Path=Karsija}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Kesto" IsReadOnly="True"  Binding="{Binding Path=Kesto}" Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="Syy" IsReadOnly="True"  Binding="{Binding Path=Syy}" Width="80"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Lisää" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="70" Margin="10 0" Click="AddHomePenalty" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
